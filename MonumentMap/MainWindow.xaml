                                              SelectionChanged="monumentTypeSelected"
                                              MouseEnter="comboBox_MouseEnter"
                                              MouseLeave="comboBox_MouseLeave"/>
                                </Border>

                                <Label Content="Climate:" Foreground="White"
                                       Grid.Row="5" Grid.Column="0"
