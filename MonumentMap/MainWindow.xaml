                                       HorizontalAlignment="Center"
                                       FontSize="14" Foreground="White"
                                       FontWeight="SemiBold"/>

                            <TextBlock Grid.Column="2" Text="Type"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontSize="14" Foreground="White"
                                       FontWeight="SemiBold"/>

                            <TextBlock Grid.Column="3" Text="Climate"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontSize="14" Foreground="White"
                                       FontWeight="SemiBold"/>

                        </Grid>

                        <ScrollViewer Grid.Row="1"
