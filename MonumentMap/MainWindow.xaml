                    <Grid Grid.Column="3" >
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="increaseFontBtn" Grid.Column="0"
                                Grid.Row="0"
                                HorizontalAlignment="Stretch"
                            Foreground="White" FontSize="20"
                            FontWeight="UltraBold"

                            VerticalAlignment="Stretch"
                            Click="increaseFontBtn_Click"
                            Command="{x:Static local:ToolbarCommands.IncreaseFont}">
                            <Image Source="icons/arrowUpIcon.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Button>

                        <Button x:Name="decreaseFontBtn" Grid.Column="0"
                                Grid.Row="1" HorizontalAlignment="Stretch"
                            Foreground="White" FontSize="20"
                            FontWeight="UltraBold"
                            VerticalAlignment="Stretch"
                            Click="decreaseFontBtn_Click"
                            Command="{x:Static local:ToolbarCommands.DecreaseFont}">
                            <Image Source="icons/arrowDownIcon.png"
                                   RenderOptions.BitmapScalingMode="HighQuality" />
                        </Button>

                        <TextBlock Grid.RowSpan="2" Grid.Column="1"
                                   Text="+0" Foreground="White"
                                   x:Name="FontSizeIndicator"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" FontSize="15"/>

                        <TextBlock Grid.Column="3" Grid.RowSpan="2"  Text="Font Size"
                                   Foreground="White" HorizontalAlignment="Left"
                                   VerticalAlignment="Center" Margin="10"
                                   FontSize="14" FontWeight="SemiBold"/>

                    </Grid>



                    <TextBlock x:Name="UserNotificationMessage" Foreground="White"
                               Opacity="0" VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10"
                               Grid.Row="0" Grid.Column="4" />


                    <Button  Grid.Column="5" Foreground="White"
                             VerticalContentAlignment="Center"
                            Click="CloseSearchButton_Click"
                            x:Name="SearchCancelButton"
                            Visibility="Hidden">
                        <Image Source="icons/xIcon1.png" Height="20"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>

                    <TextBlock Grid.Column="6" Text="Search:" VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="14" Foreground="White" FontWeight="SemiBold"
                               />


                    <ComboBox Grid.Column="7" Margin="6" Padding="6"
                              SelectedIndex="0"
                              x:Name="FilterSearch"
                              SelectionChanged="FilterSearch_SelectionChanged">
                        <ComboBoxItem Name="ID">ID</ComboBoxItem>
                        <ComboBoxItem Name="Name">Name</ComboBoxItem>
                        <ComboBoxItem Name="Type">Type</ComboBoxItem>
                        <ComboBoxItem Name="Climate">Climate</ComboBoxItem>
                    </ComboBox>

                    <TextBox Grid.Column="8" Margin="6" Background="#093647"
                            Text="" HorizontalContentAlignment="Left" Padding="5"
                            VerticalContentAlignment="Center" Foreground="White"
                            FontSize="14" BorderThickness="0"
                            ToolTip="Enter search text"
                            x:Name="searchTextBox"
                            TextChanged="SearchTextBox_TextChanged"
                            KeyDown="SearchTextBox_KeyDown"/>


                    <Button x:Name="searchBtn" Grid.Column="9" ToolTip="Search"
                            Width="40" Height="40" Margin="0,0,5,5"
                            BorderThickness="0" Content="{StaticResource SearchIconImage}"
                            VerticalAlignment="Bottom"
                            Click="SearchBtn_Click"/>
                </Grid>


